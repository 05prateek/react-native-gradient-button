  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "jsx": "react-native",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "moduleResolution": "node"
